#include <stdio.h>
#include <math.h>

/*4. Faça um programa que leia dois valores inteiros nas variáveis x e y e troque o conteúdo das variáveis. Refaça este problema sem o uso de outras variáveis que não x e y. */
int main()
{
   int x;
   int y;

   printf("Digite um numero para x: \n");
    scanf("%i", &x);

   printf("Digite um numero para y: \n");
    scanf("%i", &y);

   x = x+y;
   y = x-y;
   x = x-y;

   printf("O valor de x e: %d\n", x);
   printf("O valor de y e: %d\n", y);


}
